<h1>New Todo List</h1>

<form action="<%= todo_lists_url %>" method="post">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Name
    <input type="text" name="todo_list[name]" value="<%= @todo_list.name %>">
  </label>

  <label>Description
    <input type="textarea" name="todo_list[description]" value="<%= @todo_list.description %>">
  </label>

  <input type="submit" value="Create New Todo List">

</form>
